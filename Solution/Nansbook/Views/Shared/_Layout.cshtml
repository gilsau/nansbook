<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>NANSBook - @ViewBag.Title</title>
    @Styles.Render("~/css/bootstrap.min.css")
    @Styles.Render("~/css/main.css")
    @RenderSection("stylesheets", required: false)
</head>
<body>
    
    <div id="backDimmer" class="overlay"></div>
    <div id="mainLoader" class="loader"></div>
    <div class="container-fluid grad1 nopad nomargin">
        @Html.Partial("Header")
        <div class="title1">@ViewBag.Title</div>
        <div class="container-fluid nopad nomargin overflow-y">@RenderBody()</div>
        @Html.Partial("Footer")
    </div>

    <div class="modal fade" id="modal_loading" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <img src="~/images/loading.gif" style="height:100px;" class="center-block" />
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/scripts/jquery-2.1.3.min.js")
    @Scripts.Render("~/scripts/bootstrap.min.js")
    @Scripts.Render("~/scripts/global.js")
    @RenderSection("scripts", required: false)
</body>
</html>
